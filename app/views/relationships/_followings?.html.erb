<% if current_user.followings?(user) %>
  <%= link_to t('dictionary.button.Unfollow'), user_relationships_path(user.id), method: :delete, remote: true, class:"btn btn-outline-primary btn-lg w-100" %>
<% else %>
  <%= link_to t('dictionary.button.Follow'), user_relationships_path(user.id), method: :post, remote: true, class:"btn btn-outline-success btn-lg w-100" %>
<% end %>