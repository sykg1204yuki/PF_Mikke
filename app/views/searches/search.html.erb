<div class="container">
  
  <% if @datas.empty? %>
    <h2>該当する投稿はありません</h2>
  <% else %>
    <h2><strong>「<%= @post_image %>」の投稿一覧</strong></h2>
  <% end %>
  
  <div class="row">
    
    <!--エリア検索-->
    <div class="col-md-2" style="height: 600px; overflow-y:scroll;">
      <table class="table table-border" height="600">
        <thead>
          <tr>
            <th>エリア検索</th>
          </tr>
        </thead>
        <tbody>
          <% @areas.each do |area| %>
          <tr>
            <td>
              <%= link_to area.area_name, searches_path('search[areaid]': area.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!--エリア検索結果一覧表示-->
    <div class="col-md-10">
      <div class="container">
        <div class="row">
          <% @datas.reverse.each do |data| %>
            <div class="col-md-4 p-1">
              <%= link_to post_image_path(data.id) do %>
                <%= attachment_image_tag data, :image, size:"280x280" %><br>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
</div>




