<div class="container">

  <% if @datas.empty? %>
    <h2>該当する投稿はありません</h2>
  <% else %>
    <h2><strong>「<%= @post_image %>」の投稿一覧</strong></h2>
  <% end %>

  <div class="row">

    <!--エリア検索-->
    <div class="col-md-2" style="height: 600px; overflow-y:scroll;">
      <table class="table table-border" height="600">
        <thead>
          <tr>
            <th>エリア検索</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to '全件', post_images_path %>
            </td>
          </tr>
          <% @areas.each do |area| %>
          <tr>
            <td>
              <%= link_to area.area_name, searches_path('search[areaid]': area.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!--エリア検索結果一覧表示-->
    <div class="col-md-10">
      <div class="container">
        <div class="row">
          <% @datas.reverse.each do |data| %>
            <div class="col-md-4 p-1">
              <% if data.images.attached? %>
                <%= link_to post_image_path(data.id) do %>
                  <div id="loginIndex-post-images">
                    <div class="index-theTarget">
                      <% data.images.each do |image| %>
                        <%= image_tag image, size:"300x300" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>




