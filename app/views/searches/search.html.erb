<div class="container my-5">

  <% if @datas.empty? %>
    <h2><strong><%= t('dictionary.title_head.Not Posts') %></strong></h2>
  <% else %>
    <h2><strong>「<%= @post_image %>」<%= t('dictionary.title_head.lists') %></strong></h2>
  <% end %>

  <div class="row">

    <!--エリア検索-->
    <div class="col-md-2" style="height:600px; overflow-y:scroll;">
      <%= render 'areas/areas_index', areas: @areas %>
    </div>

    <!--エリア検索結果一覧表示-->
    <div class="col-md-10">
      <div class="container">
        <div class="row">
          <% @datas.reverse.each do |data| %>
            <div class="col-md-4 p-1">
              <% if data.images.attached? %>
                <%= link_to post_image_path(data.id) do %>
                  <div id="loginIndex-post-images">
                    <div class="index-theTarget">
                      <% data.images.each do |image| %>
                        <%= image_tag image, size:"300x300" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>




