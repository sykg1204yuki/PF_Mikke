<div class="container my-5">
  <h2><strong><%= t('dictionary.title_head.Profile Edit') %></strong></h2>
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @user, local: true do |f| %>
        <div class="container">
          <div class="row">
            <div class="col-md-4 text-center">
              <!--ここにプロフィール画像挿入-->
              <%= attachment_image_tag @user, :profile_image, fallback:"no-image.jpg", size:"250x250", class:"rounded-circle" %><br>
              <%= f.attachment_field :profile_image %>
            </div>
            <div class="col-md-4">
              <%= f.label :名前 %><br>
              <%= f.text_field :name, placeholder:"名前を入力してね！！", class:"w-75" %>
              <hr>
              <%= f.label :自己紹介 %><br>
              <%= f.text_area :introduction, rows:'5', placeholder:"自己紹介を入力してね！！", class:"w-100" %><br>

              <%= f.submit t('dictionary.submit.update'), class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


