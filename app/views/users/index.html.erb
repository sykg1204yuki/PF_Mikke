<div class="container">
  <h2>ユーザー一覧画面</h2>

  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md-3">
      <div class="text-center">
        <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag user, :profile_image, size:"250x250", class:"rounded-circle" %><br>
          <%= user.name %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
