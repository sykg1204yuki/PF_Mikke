<div class="container mt-2 mb-5">

  <!--ユーザー検索フォーム-->
  <div class="text-right">
    <%= form_tag(users_path, :method => "get") do %>
      <%= text_field_tag :search %>
      <%= submit_tag t('dictionary.submit.Search'), :name => nil, class:"button is-info" %>
    <% end %>
  </div>


  <h2><strong><%= t('dictionary.title_head.Users List') %></strong></h2>

  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md-3">
      <div class="text-center">
        <%= link_to user_path(user.id) do %>
          <%= attachment_image_tag user, :profile_image, fallback:"no-image.jpg", size:"250x250", class:"user-image" %><br>
          <%= user.name %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
