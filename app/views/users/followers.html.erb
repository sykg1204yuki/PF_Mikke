<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><strong>フォロワー一覧</strong></h2>


      <table class="table table-white">
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td class="text-center">
              <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, fallback:'no-image.jpg', size:"100x100", class:"rounded-circle" %><br>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <span id="followings-count-<%= user.id %>">
                <%= render 'relationships/followings_count', user: user %>
              </span>
              |
              <span id="followers-count-<%= user.id %>">
                <%= render 'relationships/followers_count', user: user %>
              </span>
            </td>
            <td>
              <% if user != current_user %>
                <div id="followings-btn-<%= user.id %>">

                  <%= render 'relationships/followings?', user: user %>

                </div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>