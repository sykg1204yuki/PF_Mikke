
<table class="table table-border h5" height="600">
  <thead>
    <tr>
      <th><%= t('dictionary.title_head.Area Search') %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to t('dictionary.link.All posts'), post_images_path %>
      </td>
    </tr>
    <% areas.each do |area| %>
    <tr>
      <td>
        <%= link_to area.area_name, searches_path(area.id) %>    
        <!--多言語化とクエリパラメータは相性が悪いのでパスパラメータを使う-->
      </td>
    </tr>
    <% end %>
  </tbody>
</table>