<h2><strong>投稿編集</strong></h2>

<%= form_with model: @post_image, local: true do |f| %>
  <div>
    <%= f.label :画像選択 %><br>
    <%= f.attachment_field :image %>
  </div>

  <div>
    <%= f.label :タイトル %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :本文 %><br>
    <%= f.text_area :caption, rows:'5' %>
  </div>

  <div>
    <%= f.submit '更新' %>
  </div>

<% end %>