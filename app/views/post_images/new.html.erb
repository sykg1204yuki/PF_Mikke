<div class="container my-5">
  <div class="row">
    <div class="col-md-12 h4">
      <h2><strong><%= t('dictionary.title_head.New Post') %></strong></h2>

      <%= form_with model: @post_image, local: true do |f| %>
        <div class="my-3">
          <%= f.label :画像選択 %><br>
          <%= f.file_field :images, multiple: true %>
        </div>

        <div class="my-3">
          <%= f.label :タイトル %><br>
          <%= f.text_field :title, class:"w-50" %>
        </div>

        <div class="my-3">
          <%= f.label :エリア %><br>
          <%= f.collection_select(:area_id, Area.all, :id, :area_name, prompt: t('dictionary.title_head.Select')) %>
        </div>

        <div class="my-3">
          <%= f.label :本文 %><br>
          <%= f.text_area :caption, rows:'5', class:"w-50" %>
        </div>

        <div class="my-3">
          <%= f.submit t('dictionary.submit.post'), class:"btn btn-primary btn-lg" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

