<!DOCTYPE html>
<html>
  <head>
    <title>PFMikke</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">

          <!--ロゴのリンク設定-->
          <% if user_signed_in? %>
            <%= link_to user_path(current_user), class:"navbar-brand py-1" do %>
              <%= image_tag('logo.jpg', size:"150x80") %>
            <% end %>
          <% else %>
            <%= link_to root_path, class:"navbar-brand py-1" do %>
              <%= image_tag('logo.jpg', size:"150x80") %>
            <% end %>
          <% end %>

          <!--ナビゲーションアイコン（ハンバーガーメニュー）の表示部分-->
          <button class="navbar-toggler"
                  type="button"
                  data-toggle="collapse"
                  data-target="#navbarNavDropdown"
                  aria-controls="NavbarNavDropdown"
                  aria-expanded="false"
                  aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!--ヘッダーリンク部分-->
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to 'マイページ', user_path(current_user), class:"nav-link" %>
                </li>
                <li>
                  <%= link_to '新規投稿',new_post_image_path, class:"nav-link" %>
                </li>
                <li>
                  <%= link_to '探索',post_images_path, class:"nav-link" %>
                </li>
                <li>
                  <%= link_to 'ユーザー一覧', users_path, class:"nav-link" %>
                </li>
                <li>
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"nav-link" %>
                </li>
              <% else %>
                <li>
                  <%= link_to '投稿一覧', post_images_path, class:"nav-link" %>
                </li>
                <li>
                  <%= link_to 'ログイン', new_user_session_path, class:"nav-link" %>
                </li>
                <li>
                  <%= link_to '新規登録', new_user_registration_path, class:"nav-link" %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>

    </header>


    <%= yield %>


    <footer class="text-center bg-light">
      <p class="py-4">©️ Yamamoto Yuki</p>
    </footer>
  </body>
</html>
